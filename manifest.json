{
  "manifest_version": 3,
  "name": "Stay Engaged",
  "version": "1.1.0",
  "description": "This extension was designed to keep you focused and engaged, no need to keep opening new tabs. Keep all your tools in one place.",
  "action": {
    "default_title": "Stay Engaged",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "./assets/images/logo/logo-16px.png",
    "48": "./assets/images/logo/logo-48px.png",
    "128": "./assets/images/logo/logo-128px.png"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost/*"],
      "css": [
        "./styles/style.css"
      ],
      "js": [
        "./js/libraries/jquery.js",
        "./js/libraries/jqueryui.js",
        "./js/libraries/wordList.js",
        "./js/libraries/colors.js",
        "./js/libraries/updates.js",
        "./app.js",
        "./js/variables.js",
        "./js/helpers.js",
        "./js/theme.js",
        "./js/settings.js",
        "./js/update.js",
        "./js/createHtml.js",
        "./js/menu.js",
        "./js/notes.js",
        "./js/passwordGen.js",
        "./js/colorPallet.js",
        "./js/cssMinify.js",
        "./js/todos.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "./assets/fonts/*"
      ],
      "matches": ["http://localhost/*"]
    }
  ]
}
